<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="liga.store.warehouseservice.core.repository.ProductPhotoRepository">

    <resultMap id="ProductPhotoEntity"
               type="liga.store.warehouseservice.core.model.entity.ProductPhotoEntity" autoMapping="true">
        <id property="id" column="id" jdbcType="BIGINT"/>
    </resultMap>

    <select id="findAll" resultMap="ProductPhotoEntity">
        SELECT *
        FROM warehouse_data.product_photo;
    </select>

    <select id="findById" resultMap="ProductPhotoEntity">
        SELECT *
        FROM warehouse_data.product_photo
        WHERE id = #{productPhotoId, jdbcType=BIGINT};
    </select>

    <select id="findByListId" resultMap="ProductPhotoEntity">
        <bind name="" value=""/>
        SELECT *
        FROM warehouse_data.product_photo
        <choose>
            <when test="productPhotoListId.isEmpty()">
                ORDER BY id DESC
                LIMIT 10;
            </when>
            <otherwise>
                WHERE id IN
                <foreach collection='productPhotoListId' item='id' open='(' separator=',' close=')'>
                    #{id, jdbcType=BIGINT}
                </foreach>
            </otherwise>
        </choose>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO warehouse_data.product_photo ( url, parent_id)
        VALUES (#{url}, #{parentId});
    </insert>

    <insert id="insertAll" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO warehouse_data.product_photo ( url, parent_id) VALUES
        <foreach collection="productPhotoEntityList" item="productPhotoEntity" separator=",">
            (#{url}, #{parentId})
        </foreach>
    </insert>

    <update id="updateById" parameterType="liga.store.warehouseservice.core.model.entity.ProductPhotoEntity">
        UPDATE warehouse_data.product_photo SET
        <if test="url != null">
            url = #{url},
        </if>
        <if test="parentId != null">
            parent_id = #{parentId},
        </if>
        WHERE id = #{id};
    </update>

    <delete id="deleteById">
        DELETE
        FROM warehouse_data.product_photo
        WHERE id = #{productPhotoId};
    </delete>
</mapper>